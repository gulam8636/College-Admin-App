<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6sp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_border"
            android:backgroundTint="#DFE3FA"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8sp"
                android:layout_weight="1.4"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherName"
                    android:text="Ali Mustafa"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherPost"
                    android:text="Principal"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherEmail"
                    android:text="gulam8636@gmail.com"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/updateTeacherInfoBtn"
                    android:textColor="#fff"
                    android:text="Edit"
                    android:textStyle="bold"
                    android:backgroundTint="#1456A6"
                    android:textAllCaps="false"
                    android:layout_marginTop="8sp"
                    android:layout_marginLeft="10sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    >

                </com.google.android.material.button.MaterialButton>
            </LinearLayout>
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="70sp"
    android:id="@+id/teacherImg"
    android:layout_marginRight="5sp"
    android:layout_height="120sp"
    android:background="@drawable/img"
    android:layout_weight="0.3"
    android:layout_gravity="center_horizontal"
    />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>